{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.40.2.10011",
      "templateHash": "3834781739587500141"
    }
  },
  "parameters": {
    "hubName": {
      "type": "string",
      "metadata": {
        "description": "Name of the AI Hub"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for AI resources"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags for AI resources"
      }
    },
    "applicationInsightsId": {
      "type": "string",
      "metadata": {
        "description": "Application Insights ID"
      }
    },
    "storageAccountId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Storage Account ID"
      }
    },
    "keyVaultId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Key Vault ID"
      }
    }
  },
  "resources": [
    {
      "condition": "[empty(parameters('storageAccountId'))]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[take(format('{0}stor', replace(parameters('hubName'), '-', '')), 24)]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2"
      }
    },
    {
      "condition": "[empty(parameters('keyVaultId'))]",
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[format('{0}-kv', parameters('hubName'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "enableRbacAuthorization": true,
        "enableSoftDelete": true,
        "softDeleteRetentionInDays": 7
      }
    },
    {
      "type": "Microsoft.MachineLearningServices/workspaces",
      "apiVersion": "2024-04-01",
      "name": "[parameters('hubName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Basic",
        "tier": "Basic"
      },
      "kind": "Hub",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "friendlyName": "[parameters('hubName')]",
        "storageAccount": "[if(empty(parameters('storageAccountId')), resourceId('Microsoft.Storage/storageAccounts', take(format('{0}stor', replace(parameters('hubName'), '-', '')), 24)), parameters('storageAccountId'))]",
        "keyVault": "[if(empty(parameters('keyVaultId')), resourceId('Microsoft.KeyVault/vaults', format('{0}-kv', parameters('hubName'))), parameters('keyVaultId'))]",
        "applicationInsights": "[parameters('applicationInsightsId')]",
        "publicNetworkAccess": "Enabled"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', format('{0}-kv', parameters('hubName')))]",
        "[resourceId('Microsoft.Storage/storageAccounts', take(format('{0}stor', replace(parameters('hubName'), '-', '')), 24))]"
      ]
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2023-05-01",
      "name": "[format('{0}-aiservices', parameters('hubName'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "S0"
      },
      "kind": "AIServices",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "customSubDomainName": "[format('{0}-aiservices', parameters('hubName'))]",
        "publicNetworkAccess": "Enabled",
        "networkAcls": {
          "defaultAction": "Allow"
        }
      }
    }
  ],
  "outputs": {
    "aiHubId": {
      "type": "string",
      "value": "[resourceId('Microsoft.MachineLearningServices/workspaces', parameters('hubName'))]"
    },
    "aiHubName": {
      "type": "string",
      "value": "[parameters('hubName')]"
    },
    "aiServicesId": {
      "type": "string",
      "value": "[resourceId('Microsoft.CognitiveServices/accounts', format('{0}-aiservices', parameters('hubName')))]"
    },
    "aiServicesName": {
      "type": "string",
      "value": "[format('{0}-aiservices', parameters('hubName'))]"
    },
    "aiServicesEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', format('{0}-aiservices', parameters('hubName'))), '2023-05-01').endpoint]"
    },
    "storageAccountId": {
      "type": "string",
      "value": "[if(empty(parameters('storageAccountId')), resourceId('Microsoft.Storage/storageAccounts', take(format('{0}stor', replace(parameters('hubName'), '-', '')), 24)), parameters('storageAccountId'))]"
    },
    "keyVaultId": {
      "type": "string",
      "value": "[if(empty(parameters('keyVaultId')), resourceId('Microsoft.KeyVault/vaults', format('{0}-kv', parameters('hubName'))), parameters('keyVaultId'))]"
    }
  }
}